<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'kate-trysh-Dnkr_lmdKi8-unsplash.jpg', alt: "text" %>);">
  <h1><%= @list.name %></h1>
</div>
<div class="container mt-2">
  <%= link_to 'Add a movie', new_list_bookmark_path(@list),  class: "text-decoration-none btn btn-secondary"%>
  <%= link_to 'New list', new_list_path,  class: "text-decoration-none btn btn-secondary"%>
 <div class="card mb-3 mt-3" style="max-width: 300px;">
    <% @list.bookmarks.each do |bookmark| %>
    <%=image_tag bookmark.movie.poster_url, alt: "text", class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= bookmark.movie.title %></h5>
      <p><%= bookmark.movie.overview %></p>
    </div>
    <% end %>

  </div>
    <%= simple_form_for([@list, @review]) do |f| %>
    <%= f.input :rating %>
    <%= f.input :comment %>
    <%= f.submit 'Add review', class:"text-decoration-none btn btn-secondary" %>
    <% end %>
</div>

<div class="container">
<h1>Reviews</h1>
   <% @list.reviews.each do |review| %>
      <p><%= review.comment %></p>
   <% end %>
</div>
