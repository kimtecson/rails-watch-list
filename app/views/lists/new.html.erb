<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'kate-trysh-Dnkr_lmdKi8-unsplash.jpg', alt: "text" %>);">
    <h1>Create a new list!</h1>

</div>


<div class="container mt-2">
  <%= simple_form_for(@list) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit 'Submit', class:"text-decoration-none btn btn-secondary"  %>
  <% end %>
  <%= link_to 'Back', lists_path,  class: "text-decoration-none btn btn-secondary mt-2"%>
</div>
